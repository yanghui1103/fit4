<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="positionSql"> 
	<sql id="paginationSql">
		<![CDATA[ and rownum >#{start_num} and rownum <= #{end_num} ]]>   
	</sql>
	<!-- 获取组织信息 -->
	<select id="getPositions" parameterType="position" resultType="position">
		select * from (
		select * from t_position where name like  '%'||#{keyWords}||'%' and isdeleted='0' order by create_time desc ) 
		where 1=1  
		<if test="paginationEnable!='0'">		
			<include refid="paginationSql"></include>
		</if>
	</select>
	<!-- 删除组织 -->
	<update id="delete"  parameterType="String">
		update t_position set isdeleted='1'  where id = #{id}
	</update>
	<insert id="insert"  parameterType="tuser">
		insert into t_position(fdid,user_cd,user_name,user_order,password,phone,state,isdeleted,create_time,creator,version_time) values
		(#{fdid},#{user_cd},#{user_name},#{user_order},#{password},#{phone},'2','0',sysdate,#{creator},sysdate)
	</insert>
</mapper>   